<div class="row">
    <section class="main col-md-9">
        {{#if data.posts}}
        <article>
            <h2>{{data.post.title}}</h2>
            <img src="{{data.post.featureImage}}" alt="feature Image" style="width:100%"/>
            <br /><br />
            {{#safeHTML data.post.body}}{{/safeHTML}}
            <br /><br />
            <strong>Category:</strong> {{data.post.category}}<br />
            <strong>Last Updated:</strong> {{#formatDate data.post.postDate}}{{/formatDate}}
        </article>
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </section>

    <aside class="col-md-3">
        <br /><br />
        {{#if data.posts}}
        <h4>Posts</h4>
        <ul class="list-group">
            {{#each data.posts}}
                <a class="list-group-item" href="/blog/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a>
            {{/each}}
        </ul>
        {{/if}}

        {{#if data.categories}}
        <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.categories}}
                <a class="list-group-item" href="/blog?category={{this.id}}">{{this.category}}</a>
            {{/each}}
        </ul>
        {{/if}}
    </aside>
</div>